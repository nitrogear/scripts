# Generated by Chef <%= node['fqdn'] %>
# Local modifications will be overwritten.

<IfModule dispatcher_module>
	# location of the configuration file. eg: 'conf/dispatcher.any'
    DispatcherConfig <%= @dispatcher_conf_file %>

	# location of the dispatcher log file. eg: 'logs/dispatcher.log'
    DispatcherLog logs/dispatcher.log

	# log level for the dispatcher log
	# 0 Errors
	# 1 Warnings
	# 2 Infos
	# 3 Debug
    DispatcherLogLevel <%= @dispatcher_log_level %>
</IfModule>

<VirtualHost *:80>
ServerAdmin ops@example.com
RewriteEngine  on
RequestHeader unset Authorization

DocumentRoot "<%= @dispatcher_cache %>" 

<Directory "<%= @dispatcher_cache %>">
  Options Indexes FollowSymLinks MultiViews
  AllowOverride None
  Require all granted
</Directory>

  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn

  CustomLog "<%= @apache_prefix %>/etc/httpd/logs/access.log" combined
  ServerSignature On
<IfModule dispatcher_module>
  SetHandler dispatcher-handler
</IfModule>
</VirtualHost>
